{
  "name": "volleykit-web",
  "description": "VolleyKit - Swiss Volleyball Referee Management PWA",
  "private": true,
  "version": "1.16.1",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "axios": "^1.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"e2e/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"e2e/**/*.ts\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "screenshots:help": "playwright test e2e/capture-screenshots.spec.ts --project=chromium",
    "size": "size-limit",
    "preview": "vite preview",
    "generate:api": "openapi-typescript ../docs/api/volleymanager-openapi.yaml -o ../packages/shared/src/api/schema.ts && openapi-typescript ../docs/api/volleymanager-openapi.yaml -o src/api/schema.ts",
    "knip": "knip",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:status": "changeset status"
  },
  "size-limit": [
    {
      "name": "Main App Bundle",
      "path": "dist/assets/index-*.js",
      "limit": "145 kB",
      "gzip": true
    },
    {
      "name": "Vendor Chunks",
      "path": [
        "dist/assets/chunk-react-vendor-*.js",
        "dist/assets/chunk-router-*.js",
        "dist/assets/chunk-state-*.js",
        "dist/assets/chunk-validation-*.js"
      ],
      "limit": "50 kB",
      "gzip": true
    },
    {
      "name": "PDF Library (lazy-loaded)",
      "path": "dist/assets/chunk-pdf-lib-*.js",
      "limit": "185 kB",
      "gzip": true
    },
    {
      "name": "Image Cropper (lazy-loaded)",
      "path": "dist/assets/chunk-cropper-*.js",
      "limit": "10 kB",
      "gzip": true
    },
    {
      "name": "CSS Bundle",
      "path": "dist/assets/*.css",
      "limit": "12 kB",
      "gzip": true
    },
    {
      "name": "Total JS Bundle",
      "path": "dist/assets/*.js",
      "limit": "540 kB",
      "gzip": true
    }
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "@volleykit/shared": "*",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.563.0",
    "ojp-sdk-next": "^0.21.4",
    "pdf-lib": "^1.17.1",
    "pluscodes": "^3.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-easy-crop": "^5.5.6",
    "react-router-dom": "^7.13.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@size-limit/file": "^12.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "globals": "^17.3.0",
    "happy-dom": "^20.5.0",
    "knip": "^5.83.1",
    "msw": "^2.12.9",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
