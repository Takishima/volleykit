{
  "name": "volleykit-web",
  "description": "VolleyKit - Swiss Volleyball Referee Management PWA",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "size": "size-limit",
    "preview": "vite preview",
    "generate:api": "openapi-typescript ../docs/api/volleymanager-openapi.yaml -o src/api/schema.ts"
  },
  "size-limit": [
    {
      "name": "JS Bundle",
      "path": "dist/assets/*.js",
      "limit": "163 kB",
      "gzip": true
    },
    {
      "name": "CSS Bundle",
      "path": "dist/assets/*.css",
      "limit": "10 kB",
      "gzip": true
    }
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "date-fns": "^4.1.0",
    "openapi-typescript-fetch": "^2.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.10.1",
    "tailwindcss": "^4.1.17",
    "zod": "^4.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@size-limit/preset-app": "^12.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "openapi-typescript": "^7.10.1",
    "size-limit": "^12.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15",
    "workbox-window": "^7.4.0"
  }
}
