---
/**
 * Previous/Next navigation component
 * Renders navigation cards at the bottom of content
 */

interface NavLink {
  title: string
  href: string
}

interface Props {
  prev?: NavLink
  next?: NavLink
}

const { prev, next } = Astro.props

// Don't render if no prev or next
if (!prev && !next) {
  return null
}
---

<nav
  class="mt-12 grid gap-4 border-t border-border-default pt-8 dark:border-border-default-dark sm:grid-cols-2"
  aria-label="Page navigation"
>
  <!-- Previous link -->
  <div class={next && !prev ? 'sm:col-start-2' : ''}>
    {
      prev && (
        <a
          href={prev.href}
          class="group flex h-full flex-col rounded-lg border border-border-default bg-surface-card p-4 transition-all hover:border-primary-500 hover:shadow-md dark:border-border-default-dark dark:bg-surface-card-dark dark:hover:border-primary-400"
        >
          <span class="mb-1 flex items-center gap-1 text-sm text-text-muted dark:text-text-muted-dark">
            <svg
              class="h-4 w-4 transition-transform group-hover:-translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"
              />
            </svg>
            Previous
          </span>
          <span class="font-medium text-text-primary group-hover:text-primary-600 dark:text-text-primary-dark dark:group-hover:text-primary-400">
            {prev.title}
          </span>
        </a>
      )
    }
  </div>

  <!-- Next link -->
  <div>
    {
      next && (
        <a
          href={next.href}
          class="group flex h-full flex-col items-end rounded-lg border border-border-default bg-surface-card p-4 text-right transition-all hover:border-primary-500 hover:shadow-md dark:border-border-default-dark dark:bg-surface-card-dark dark:hover:border-primary-400"
        >
          <span class="mb-1 flex items-center gap-1 text-sm text-text-muted dark:text-text-muted-dark">
            Next
            <svg
              class="h-4 w-4 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </span>
          <span class="font-medium text-text-primary group-hover:text-primary-600 dark:text-text-primary-dark dark:group-hover:text-primary-400">
            {next.title}
          </span>
        </a>
      )
    }
  </div>
</nav>
