---
// Breadcrumbs component - placeholder

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex items-center gap-2 text-sm text-text-muted dark:text-text-muted-dark">
    {
      items.map((item, index) => (
        <>
          {index > 0 && <span class="text-text-subtle dark:text-text-subtle-dark">/</span>}
          <li>
            {item.href ? (
              <a
                href={item.href}
                class="hover:text-primary-600 dark:hover:text-primary-400"
              >
                {item.label}
              </a>
            ) : (
              <span class="text-text-primary dark:text-text-primary-dark">{item.label}</span>
            )}
          </li>
        </>
      ))
    }
  </ol>
</nav>
