---
import { navItems } from '../data/navItems';
import LanguageSwitcher from './LanguageSwitcher.astro';

const currentPath = Astro.url.pathname;

// Helper to check if a nav item is active
function isActive(href: string): boolean {
  if (href === '/volleykit/help/') {
    return currentPath === href || currentPath === '/volleykit/help';
  }
  return currentPath.startsWith(href);
}

// Icon SVGs mapped by name
const icons: Record<string, string> = {
  home: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>`,
  rocket: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>`,
  'calendar-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l2 2 4-4"/>`,
  'arrow-left-right': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>`,
  wallet: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>`,
  calendar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>`,
  train: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4h8l2 4v8a2 2 0 01-2 2H6a2 2 0 01-2-2V8l2-4zm0 12h.01M16 16h.01M12 4v4m-4 8l-2 4m12-4l2 4"/>`,
  'wifi-off': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1l22 22M16.72 11.06A10.94 10.94 0 0119 12.55M5 12.55a10.94 10.94 0 015.17-2.39M10.71 5.05A16 16 0 0122.58 9M1.42 9a15.91 15.91 0 014.7-2.88M8.53 16.11a6 6 0 016.95 0M12 20h.01"/>`,
  settings: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`,
};
---

<!-- Mobile navigation drawer -->
<div
  class="fixed inset-0 z-50 hidden lg:hidden"
  data-mobile-nav
  data-pagefind-ignore
  role="dialog"
  aria-modal="true"
  aria-label="Navigation menu"
>
  <!-- Backdrop overlay -->
  <div
    class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm transition-opacity"
    data-mobile-nav-backdrop
  >
  </div>

  <!-- Drawer panel -->
  <div
    class="fixed inset-y-0 left-0 flex w-72 flex-col bg-surface-card shadow-xl transition-transform dark:bg-surface-card-dark"
    data-mobile-nav-panel
  >
    <!-- Header with close button -->
    <div class="flex h-14 items-center justify-between border-b border-border-default px-4 dark:border-border-default-dark">
      <a href="/volleykit/help/" class="flex items-center gap-2">
        <img src="/volleykit/help/favicon.svg" alt="" class="h-7 w-7" aria-hidden="true" />
        <span class="font-semibold text-text-primary dark:text-text-primary-dark">VolleyKit Help</span>
      </a>
      <button
        type="button"
        class="flex h-9 w-9 items-center justify-center rounded-lg text-text-secondary hover:bg-surface-subtle hover:text-text-primary dark:text-text-secondary-dark dark:hover:bg-surface-subtle-dark dark:hover:text-text-primary-dark"
        aria-label="Close menu"
        data-mobile-nav-close
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Navigation links -->
    <nav class="flex-1 overflow-y-auto p-4" aria-label="Mobile navigation">
      <ul class="space-y-1">
        {
          navItems.map((item) => {
            const active = isActive(item.href);
            return (
              <li>
                <a
                  href={item.href}
                  class:list={[
                    'flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition-colors',
                    active
                      ? 'bg-primary-100 text-primary-700 dark:bg-primary-950 dark:text-primary-400'
                      : 'text-text-secondary hover:bg-surface-subtle hover:text-text-primary dark:text-text-secondary-dark dark:hover:bg-surface-subtle-dark dark:hover:text-text-primary-dark',
                  ]}
                  aria-current={active ? 'page' : undefined}
                  data-mobile-nav-link
                >
                  <svg
                    class="h-5 w-5 shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    set:html={icons[item.icon]}
                  />
                  <span>{item.title}</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <!-- Footer with language switcher and app link -->
    <div class="space-y-3 border-t border-border-default p-4 dark:border-border-default-dark">
      <LanguageSwitcher compact />
      <a
        href="https://takishima.github.io/volleykit/"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 rounded-lg bg-primary-500 px-4 py-2.5 text-sm font-medium text-primary-950 transition-colors hover:bg-primary-600"
      >
        Open App
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          />
        </svg>
      </a>
    </div>
  </div>
</div>

<script>
  function initMobileNav() {
    const mobileNav = document.querySelector('[data-mobile-nav]');
    const backdrop = document.querySelector('[data-mobile-nav-backdrop]');
    const closeBtn = document.querySelector('[data-mobile-nav-close]');
    const panel = document.querySelector('[data-mobile-nav-panel]');
    const links = document.querySelectorAll('[data-mobile-nav-link]');

    if (!mobileNav || !backdrop || !closeBtn || !panel) return;

    function openNav(focusSearch = false) {
      mobileNav.classList.remove('hidden');
      // Trigger reflow for animation
      void panel.offsetWidth;
      document.body.style.overflow = 'hidden';

      // Focus search input if requested
      if (focusSearch) {
        const searchInput = mobileNav.querySelector('input[type="search"]');
        if (searchInput instanceof HTMLInputElement) {
          setTimeout(() => searchInput.focus(), 100);
        }
      }
    }

    function closeNav() {
      mobileNav.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Listen for open event from Header
    document.addEventListener('open-mobile-nav', ((e: CustomEvent<{ focusSearch?: boolean }>) => {
      openNav(e.detail?.focusSearch);
    }) as EventListener);

    // Close on backdrop click
    backdrop.addEventListener('click', closeNav);

    // Close on close button click
    closeBtn.addEventListener('click', closeNav);

    // Close on link click
    links.forEach((link) => {
      link.addEventListener('click', closeNav);
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !mobileNav.classList.contains('hidden')) {
        closeNav();
      }
    });
  }

  // Initialize on page load
  initMobileNav();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:after-swap', initMobileNav);
</script>

<style>
  /* Slide-in animation */
  [data-mobile-nav-panel] {
    transform: translateX(-100%);
  }

  [data-mobile-nav]:not(.hidden) [data-mobile-nav-panel] {
    transform: translateX(0);
  }

  /* Fade animation for backdrop */
  [data-mobile-nav-backdrop] {
    opacity: 0;
  }

  [data-mobile-nav]:not(.hidden) [data-mobile-nav-backdrop] {
    opacity: 1;
  }

  /* Transition timing */
  [data-mobile-nav-panel],
  [data-mobile-nav-backdrop] {
    transition-duration: 300ms;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
