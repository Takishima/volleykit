---
/**
 * Footer component
 * Site footer with links and copyright
 */
import { BASE_PATH } from '../constants';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border-default bg-surface-card dark:border-border-default-dark dark:bg-surface-card-dark">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center gap-6 md:flex-row md:justify-between">
      <!-- Branding -->
      <div class="flex items-center gap-2">
        <img
          src={`${BASE_PATH}/favicon.svg`}
          alt=""
          class="h-6 w-6"
          aria-hidden="true"
        />
        <span class="font-semibold text-text-primary dark:text-text-primary-dark">
          VolleyKit
        </span>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap justify-center gap-6" aria-label="Footer navigation">
        <a
          href="https://takishima.github.io/volleykit/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-secondary transition-colors hover:text-primary-600 dark:text-text-secondary-dark dark:hover:text-primary-400"
        >
          Open App
        </a>
        <a
          href="https://github.com/Takishima/volleykit"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-secondary transition-colors hover:text-primary-600 dark:text-text-secondary-dark dark:hover:text-primary-400"
        >
          GitHub
        </a>
        <a
          href="https://github.com/Takishima/volleykit/issues"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-secondary transition-colors hover:text-primary-600 dark:text-text-secondary-dark dark:hover:text-primary-400"
        >
          Report Issue
        </a>
      </nav>

      <!-- Copyright -->
      <div class="text-center text-sm text-text-muted dark:text-text-muted-dark md:text-right">
        <p>Made for Swiss volleyball referees</p>
        <p class="mt-1">&copy; {currentYear} VolleyKit</p>
      </div>
    </div>
  </div>
</footer>
