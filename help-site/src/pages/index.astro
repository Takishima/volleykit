---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import MobileNav from '../components/MobileNav.astro';
import Footer from '../components/Footer.astro';
import FeatureCard from '../components/FeatureCard.astro';

const features = [
  {
    title: 'Getting Started',
    description: 'Quick start guide to set up and use VolleyKit for the first time.',
    href: '/volleykit/help/getting-started/',
    icon: 'rocket',
  },
  {
    title: 'Assignments',
    description: 'View and manage your upcoming volleyball referee games.',
    href: '/volleykit/help/assignments/',
    icon: 'calendar-check',
  },
  {
    title: 'Exchanges',
    description: 'Request game swaps and offer your assignments to other referees.',
    href: '/volleykit/help/exchanges/',
    icon: 'arrow-left-right',
  },
  {
    title: 'Compensations',
    description: 'Track your referee earnings and compensation history.',
    href: '/volleykit/help/compensations/',
    icon: 'wallet',
  },
  {
    title: 'Calendar Mode',
    description: 'Read-only access to view assignments without logging in.',
    href: '/volleykit/help/calendar-mode/',
    icon: 'calendar',
  },
  {
    title: 'Travel Time',
    description: 'Calculate travel times using Swiss public transport integration.',
    href: '/volleykit/help/travel-time/',
    icon: 'train',
  },
  {
    title: 'Offline & PWA',
    description: 'Install the app and use it offline on your device.',
    href: '/volleykit/help/offline-pwa/',
    icon: 'wifi-off',
  },
  {
    title: 'Settings',
    description: 'Customize your language, theme, and notification preferences.',
    href: '/volleykit/help/settings/',
    icon: 'settings',
  },
];
---

<BaseLayout
  title="Documentation"
  description="Learn how to use VolleyKit to manage your volleyball referee assignments. Get started with guides for assignments, exchanges, compensations, and more."
>
  <MobileNav />

  <div class="flex min-h-screen flex-col">
    <Header />

    <main class="flex-1">
      <!-- Hero Section -->
      <section class="bg-gradient-to-b from-primary-50 to-surface-page dark:from-primary-950/30 dark:to-surface-page-dark">
        <div class="container mx-auto px-4 py-16 text-center md:py-24">
          <!-- Logo -->
          <div class="mb-6 flex justify-center">
            <img
              src="/volleykit/help/favicon.svg"
              alt=""
              class="h-16 w-16 md:h-20 md:w-20"
              aria-hidden="true"
            />
          </div>

          <!-- Heading -->
          <h1 class="mb-4 text-4xl font-bold text-text-primary dark:text-text-primary-dark md:text-5xl">
            VolleyKit Documentation
          </h1>

          <!-- Subtitle -->
          <p class="mx-auto mb-8 max-w-2xl text-lg text-text-secondary dark:text-text-secondary-dark md:text-xl">
            Learn how to use VolleyKit to manage your volleyball referee assignments
          </p>

          <!-- CTA Button -->
          <a
            href="/volleykit/help/getting-started/"
            class="inline-flex items-center gap-2 rounded-lg bg-primary-500 px-6 py-3 text-lg font-medium text-primary-950 transition-colors hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
          >
            Get Started
            <svg
              class="h-5 w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </section>

      <!-- Feature Grid -->
      <section class="container mx-auto px-4 py-16">
        <h2 class="mb-8 text-center text-2xl font-bold text-text-primary dark:text-text-primary-dark md:text-3xl">
          Explore the Documentation
        </h2>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {features.map((feature) => (
            <FeatureCard
              title={feature.title}
              description={feature.description}
              href={feature.href}
              icon={feature.icon}
            />
          ))}
        </div>
      </section>

      <!-- Quick Links Section -->
      <section class="border-t border-border-default bg-surface-subtle py-12 dark:border-border-default-dark dark:bg-surface-subtle-dark">
        <div class="container mx-auto px-4 text-center">
          <h2 class="mb-6 text-xl font-bold text-text-primary dark:text-text-primary-dark">
            Ready to get started?
          </h2>
          <div class="flex flex-wrap justify-center gap-4">
            <a
              href="https://takishima.github.io/volleykit/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg bg-primary-500 px-5 py-2.5 font-medium text-primary-950 transition-colors hover:bg-primary-600"
            >
              Open VolleyKit App
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com/Takishima/volleykit"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg border border-border-strong bg-surface-card px-5 py-2.5 font-medium text-text-primary transition-colors hover:bg-surface-subtle dark:border-border-strong-dark dark:bg-surface-card-dark dark:text-text-primary-dark dark:hover:bg-surface-subtle-dark"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"></path>
              </svg>
              View on GitHub
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>
